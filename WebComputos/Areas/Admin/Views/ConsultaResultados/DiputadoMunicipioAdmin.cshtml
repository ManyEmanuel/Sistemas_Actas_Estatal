
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    IEnumerable<SelectListItem> Distrito = ViewBag.ListaDistrito;

}
<br />
<div class="row">
    <div class="col-md-12">
        <div class="card card-secondary">
            <div class="card-header">
                <h3 class="card-title">Resultados de la elección de Diputaciones en el Estado de Nayarit</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-2">
                        <label for="Municipios">Municipio</label>
                        @Html.DropDownList("Distrito", Distrito, "-Seleccione un Distrito-", new { @class = "form-control", @id = "Distritos" })<br />
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<div id="VistaParcial" class="col-md-12">

</div>
@section Scripts
{
    <script>
        $(document).ready(function () {
            Cargar();
        });

        function Cargar() {
            $("#Distritos").change(function () {
                var a = document.getElementById("Distritos").value;
                $("#VistaParcial").load(`VistaDiputadosAdminMunicipio/${a}`)

            })
        }

    </script>

}
