
@{
    ViewData["Title"] = "Documentos Recibidos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link rel="stylesheet" href="~/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
</head>
<br />
<style>
    .centrar {
        justify-content: center;
        align-items: center;
    }

    table.dataTable tbody td {
        vertical-align: middle;
    }
</style>
<br />
<div class="row">
    <input type="hidden" id="mun" class="form-control" value=@ViewBag.IdMun />
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Porcentaje de avance de entrega de @ViewBag.Municipio</h3>
            </div>
            <div class="card-body">
                <table id="tbldocavance" class="table table-hover table-bordered text-center">
                    <thead>
                        <tr>
                            <th class="text-center">#</th>
                            <th class="text-center">Elemento</th>
                            <th class="text-center">Total</th>
                            <th class="text-center">Entregados</th>
                            <th class="text-center">Restantes</th>
                            <th class="text-center">% Avance</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Lista de documentación recibida en el municipio de @ViewBag.Municipio</h3>
            </div>
            <div class="card-body">
                <table id="tbldoc" class="table table-hover table-bordered text-center">
                    <thead>
                        <tr>
                            <th class="text-center">Sección</th>
                            <th class="text-center">Casilla</th>
                            <th class="text-center">Paquete Electoral</th>
                            <th class="text-center">Acta Gubernatura</th>
                            <th class="text-center">Acta Presidencia y Sindicatura</th>
                            <th class="text-center">Acta Diputaciones</th>
                            <th class="text-center">Acta Regidurías</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script src="~/js/DocumentosDetalle.js"></script>
    <script src="~/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
}


