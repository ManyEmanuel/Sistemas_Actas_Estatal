@{
    ViewData["Title"] = "Listado de avance de recepción de paquetes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link rel="stylesheet" href="~/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
</head>
<br />
<style>
    .centrar {
        justify-content: center;
        align-items: center;
    }

    table.dataTable tbody td {
        vertical-align: middle;
    }
</style>

<div class="row">
    <input type="hidden" id="mun" class="form-control" value=@ViewBag.Municipio />
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Listado de paquetes recibidos en el municipio de @ViewBag.Nombre</h3>
            </div>
            <div class="card-body">
                <table id="tblAvance" class="table table-hover table-bordered text-center">
                    <thead>
                        <tr>
                            <th class="text-center">Sección</th>
                            <th class="text-center">Casilla</th>
                            <th class="text-center">Fecha Recepción</th>
                            <th class="text-center">Hora Recepción</th>
                            <th class="text-center">Estatus</th>
                        </tr>
                    </thead>
                </table>
                <br />
                <h5 class="card-text text-center"> <strong>Avance de paquetes recibidos en el municipio de @ViewBag.Nombre:</strong> @ViewBag.Recibidas de @ViewBag.Total - <strong>@ViewBag.Porcentaje%</strong></h5>
            </div>
        </div>
    </div>   
</div>




@section Scripts
{
    <script src="~/js/DetalleRecepcion.js"></script>
    <script src="~/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>

}


