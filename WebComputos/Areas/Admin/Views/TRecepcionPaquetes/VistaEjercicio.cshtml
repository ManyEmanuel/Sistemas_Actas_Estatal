
@{    
    Layout = "";
    List<PuntosRec> Ejercicio = ViewBag.Ejercicio;
}
<head>
    <link rel="stylesheet" href="~/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
</head>
<br />
<style>
    .centrar {
        justify-content: center;
        align-items: center;
    }

    .centrar {
        justify-content: center;
        align-items: center;
    }

    table.dataTable tbody td {
        vertical-align: middle;
    }
</style>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Detalle del ejercicio realizado</h3>
            </div>
            <div class="card-body">
                <table id="tblvista" class="table table-hover table-bordered text-center">
                    <thead>
                        <tr>
                            <th class="text-center">Numero de Grupo</th>
                            <th class="text-center">Puntos de recuento</th>
                            <th class="text-center">Casillas a recuento</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                        @foreach (var puntos in Ejercicio)
                        {
                        <tr>
                            <td>@puntos.NoGrupos</td>
                            <td>@puntos.PuntosRecuento</td>
                            <td>@puntos.TotalCasillas</td>
                        </tr>
                        }
                        }

                        </tbody>
                    </table>
            </div>
            <div class="card-footer">
                <button type="button" class="btn btn-danger"
                        data-dismiss="modal">
                    Cerrar
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script>
    </script>

    <script src="~/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
}
