@model WebComputos.Models.ViewModels.T_Actas_VM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">
</head>
<div class="row">
    <div class="col-md-12">
        <div class="card card-secondary">
            <div class="card-header">
                <h3 class="card-title">Registro de los resultados de la elección de Presidencia y Sindicatura</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-2">
                        <label for="Seccion1">Sección:</label>
                        @Html.DropDownListFor(m => m.LSeccionPys, Model.LSeccionPys,
                        "-Seleccione una sección-", new { @class = "form-control", @id = "SeccionPys", @data_live_search = "true" })
                    </div>
                    <div class="col-md-2">
                        <label for="casid1">Casilla:</label>
                        <select id="Pys" name="casid" asp-items='@(new SelectList(string.Empty,"value","text"))' class="form-control"></select>
                    </div>
                    <div class="col-md-1">
                        <label for="llamar" class="text-white">.</label>
                        <button type="button" id="llamar" class="btn btn-success form-control">Capturar</button>
                        <input type="hidden" id="IdPys" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<div id="VistaParcial" class="col-12">

</div>
@section Scripts
{
    <script src="~/js/ResultadosPys.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/bootstrap-select.min.js"></script>
    <script>
        $(function busqueda() {
            $("#SeccionPys").selectpicker();
        });
    </script>
}
